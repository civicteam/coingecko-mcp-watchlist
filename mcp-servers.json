{
  "mcpServers": {
    "coingecko_mcp_watchlist": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@civic/hub-bridge"
      ],
      "env": {
        "MCP_REMOTE_URL": "http://localhost:3000/mcp",
        "COINGECKO_PRO_API_KEY": "YOUR_PRO_API_KEY_HERE",
        "COINGECKO_ENVIRONMENT": "pro"
      }
    },
    "__comment": "For direct CoinGecko access (alternative to the secure proxy above):",
    "coingecko_direct_public": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://mcp.api.coingecko.com/sse"
      ]
    },
    "coingecko_direct_pro": {
      "command": "npx",
      "args": [
        "mcp-remote", 
        "https://mcp.pro-api.coingecko.com/sse"
      ]
    }
  }
}